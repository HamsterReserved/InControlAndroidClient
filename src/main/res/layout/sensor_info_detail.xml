<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/device_info_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/sensor_pic"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/sensor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/sensor_pic"
            android:layout_toRightOf="@+id/sensor_pic"
            android:text="@string/def_sensor_name"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/status_message"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp"
            android:text="@string/def_update_time"
            android:textColor="@android:color/tertiary_text_dark" />

        <TextView
            android:id="@+id/status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sensor_pic"
            android:layout_below="@+id/sensor_pic"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/def_status_msg"
            android:textColor="@android:color/tertiary_text_dark"
            android:layout_marginStart="8dp"
            android:layout_alignStart="@+id/sensor_pic" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/sensor_name"
            android:layout_toRightOf="@id/sensor_name"
            android:paddingLeft="5dp"
            android:text="@string/def_sensor_name"
            android:textColor="@android:color/tertiary_text_dark"
            android:layout_toEndOf="@id/sensor_name" />
    </RelativeLayout>
</android.support.v7.widget.CardView>